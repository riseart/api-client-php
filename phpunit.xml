<?xml version="1.0" encoding="UTF-8"?>
<phpunit bootstrap="vendor/autoload.php"
         colors="true">
    <filter>
        <whitelist processUncoveredFilesFromWhitelist="true">
            <directory suffix=".php">riseart-api/src</directory>
        </whitelist>
    </filter>
    <logging>
        <log type="coverage-html" target="coverage" lowUpperBound="35" highLowerBound="70"/>
    </logging>
    <testsuites>
        <testsuite>
            <directory>tests</directory>
        </testsuite>
    </testsuites>
    <filter>
        <whitelist>
            <directory suffix=".php">riseart-api/src</directory>
            <exclude>
                <directory suffix="Interface.php">riseart-api/src</directory>
                <directory suffix="Interface.php">examples</directory>
                <directory suffix="Interface.php">tests</directory>
            </exclude>
            <exclude>
                <directory suffix="Interface.php">vendor</directory>
            </exclude>
        </whitelist>
    </filter>
</phpunit>